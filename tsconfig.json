{
  "compilerOptions": {
    "noImplicitAny": false,
    "types": [
      "react-markdown",
      "rehype-highlight"
    ],
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(private)/home/page.jsx",
    "src/components/auth/private-router.jsx",
    "src/lib/auth-provider.jsx",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}